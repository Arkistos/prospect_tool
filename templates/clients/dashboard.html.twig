{% extends 'base.html.twig' %}

{% block title %} Dashboard {% endblock %}

{% block body %}

{% if category|default %}
    <a href={{path('clients_add', {'name':category.name})}}>Ajouter</a>
{% endif %}

    <div class="clients">
    {% for client in clients %}
        <div class="client">
            <div class="client-info">{{client.companyName}}</div>
            <div class="client-info">{{client.firstname}}</div>
            <div class="client-info">{{client.lastname}}</div>
            <div class="client-info"><a href={{client.website}}>{{client.website}}</a></div>
            <div class="client-info">{{client.email}}</div>
            <div class="client-info">{{client.phone}}</div>
            <div class="client-info">{{client.address}}</div>
            <div class="client-info">{{client.state}}</div>
        </div>
        <div>
            <a href={{path('clients_update', {'id':client.id})}}>update</a>
            <a href={{path('clients_delete', {'id':client.id})}}>delete</a>
        </div>
    {% endfor %}
</div>

{% endblock %}
